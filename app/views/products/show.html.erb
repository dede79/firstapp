<div class="container">
  <div class="row">
    <div class="col-md-6">
      <p id="notice"><%= notice %></p>
      <div id="showpic">
        <%= image_tag@product.image_url, :class => "img-responsive img-zoom", width: "400", height: "500"%>
      </div>
    </div>
    <div class="col-md-6">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
      <strong>Colour:</strong>
        <%= @product.colour %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>

      <%= form_tag "/payments/create" do %>
      <%= hidden_field_tag :product_id, @product.id %>
        <%= render partial: "shared/stripe_checkout_button" %>
      <% end %>
      <br>
      <!-- comments  -->
      <p><strong>Average Rating: </strong><div class="rated" data-score="<%= @product.average_rating %>"></div> </p>

      
      <% if signed_in? && current_user.admin? %>
      <p><%= link_to 'Edit', edit_product_path(@product)%>&nbsp;
      <%= link_to 'Back', products_path %></p>
      <% end %>
      
      <%= render 'new_comment' %>
      <%= render 'comment' %>
    </div>
  </div>
</div>